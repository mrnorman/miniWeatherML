#!/bin/bash

unset YAKL_ARCH

export CC=mpicc
export CXX=mpic++
export FC=mpif90
export F90=mpif90
export F77=mpif90

export YAKL_CXX_FLAGS="-O3 -march=native"
export YAKL_C_FLAGS="-O3 -march=native"
export YAKL_F90_FLAGS="-O3 -ffree-line-length-none"
export NCFLAGS="-lnetcdf"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
