#!/bin/bash

source $MODULESHOME/init/bash
module purge
module load DefApps gcc/9.3.0 cuda/11.4.2 cmake hdf5/1.10.7 netcdf-c parallel-netcdf

export CC=mpicc
export FC=mpif90
export CXX=mpic++

export YAKL_ARCH=CUDA

export YAKL_CUDA_FLAGS="-DHAVE_MPI -O3 -arch sm_70 --use_fast_math -DYAKL_PROFILE -I${OLCF_NETCDF_C_ROOT}/include -I${OLCF_PARALLEL_NETCDF_ROOT}/include -I/ccs/home/imn/yaml/include -ccbin mpic++"
export YAKL_F90_FLAGS="-O2 -ffree-line-length-none -DSCREAM_DOUBLE_PRECISION"
export MW_LINK_FLAGS="`${OLCF_NETCDF_C_ROOT}/bin/nc-config --libs` -L/ccs/home/imn/yaml/lib64 -lyaml-cpp -L${OLCF_PARALLEL_NETCDF_ROOT}/lib -lpnetcdf -lyaml-cpp -L$OLCF_HDF5_ROOT/lib -lhdf5_hl -lhdf5_cpp -lhdf5"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
