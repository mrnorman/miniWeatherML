#!/bin/bash

export YAKL_ARCH=CUDA

export CXX=mpic++

export YAKL_CUDA_FLAGS="-O3 -arch sm_35 --use_fast_math -ccbin mpic++ -DYAKL_PROFILE -I/opt/netcdf_gnu/include -I/opt/parallel-netcdf-1.12.0_gnu/include"
export YAKL_F90_FLAGS="-O2 -ffree-line-length-none"
export YAKL_C_FLAGS="-O3 -march=native"
export NCFLAGS="`nc-config --libs` -L/opt/parallel-netcdf-1.12.0_gnu/lib -lpnetcdf"
export TORCH_CMAKE=/home/81a/software/libtorch/share/cmake/Torch
export TORCH_DEVICE=2  # default -1: runs PyTorch on CPU
export TORCH_INTEL_LIBS="-L/opt/intel/oneapi/intelpython/python3.9/lib/ -L/opt/intel/oneapi/mkl/2022.0.2/lib/intel64"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
