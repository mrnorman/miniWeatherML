#!/bin/bash

spack unload --all

source $MODULESHOME/init/bash
module purge
module load netcdf-c-4.9.2-gcc-11.1.0-mvu6i6y         \
            parallel-netcdf-1.12.2-gcc-11.1.0-33fpcbm

export HDF5_PATH=`which h5cc | xargs dirname`/..
export NETCDF_C_PATH=`nc-config --includedir`/..
export PNETCDF_PATH=`pnetcdf-config --includedir`/..

unset YAKL_ARCH

export CC=mpicc
export CXX=mpic++
export FC=mpif90

export YAKL_CUDA_FLAGS="-O0 -g -I$PNETCDF_PATH/include -I`nc-config --includedir` -I$HDF5_PATH/include"
export YAKL_F90_FLAGS="-O0 -g -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export MW_LINK_FLAGS="`nc-config --libs` -L$PNETCDF_PATH/lib -lpnetcdf -L$HDF5_PATH/lib -lhdf5"
export YAKL_DEBUG=ON

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

