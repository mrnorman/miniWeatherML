#!/bin/bash

export YAKL_ARCH=CUDA

export CXX=mpic++

export YAKL_CUDA_FLAGS="-O3 -arch sm_35 --use_fast_math -ccbin mpic++ -DYAKL_PROFILE -I/opt/netcdf_gnu/include -I/opt/parallel-netcdf-1.12.0_gnu/include"
export YAKL_F90_FLAGS="-O2 -ffree-line-length-none"
export YAKL_C_FLAGS="-O3 -march=native"
export NCFLAGS="`/opt/netcdf_gnu/bin/nc-config --libs` -L/opt/parallel-netcdf-1.12.0_gnu/lib -lpnetcdf"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
