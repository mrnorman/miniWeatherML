#!/bin/bash

source /usr/share/modules/init/bash
module purge
# cuda-11.5.0-gcc-11.1.0-pm6vauh
# cuda-11.6.0-gcc-11.1.0-h7khsvh
# cuda-11.7.0-gcc-11.1.0-zbtc2fk
module load cuda-11.6.0-gcc-11.1.0-h7khsvh

export YAKL_ARCH=CUDA

export CC=mpicc
export CXX=mpic++
export FC=mpif90

export YAKL_CUDA_FLAGS="-O3 -arch sm_86 -DHAVE_MPI --use_fast_math -ccbin mpic++ -DYAKL_PROFILE -I/usr/include/hdf5/serial"
export YAKL_F90_FLAGS="-O2 -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export MW_LINK_FLAGS="`nc-config --libs` -L/usr/lib/x85_64-linux-gnu -lpnetcdf -L/usr/lib/x86_64-linux-gnu/hdf5/serial -lhdf5 -lyaml-cpp"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

