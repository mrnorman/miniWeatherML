#!/bin/bash

export YAKL_ARCH=OPENMP

export CC=mpicc
export CXX=mpic++
export FC=mpif90

export YAKL_OPENMP_FLAGS="-fopenmp -O3 -DYAKL_DEBUG -I/usr/include/hdf5/serial"
export YAKL_F90_FLAGS="-O2 -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export MW_LINK_FLAGS="`nc-config --libs` -L/usr/lib/x85_64-linux-gnu -lpnetcdf -L/usr/lib/x86_64-linux-gnu/hdf5/serial -lhdf5"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

